<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedStore.MedRequestsActivity">


    <TextView
        android:id="@+id/abcde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Medicine Requests"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textViewMsgMedRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="No items to display!"
        android:textAlignment="center"
        android:visibility="gone"
        android:layout_below="@+id/abcde"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_medicine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/right_button_btn_line"
        android:layout_below="@id/textViewMsgMedRequest"/>

</RelativeLayout>