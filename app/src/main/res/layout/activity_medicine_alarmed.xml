<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserMod.MedicineAlarmedActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/medicineTextview"
            android:textSize="20sp"
            android:text="Have your medicine"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:padding="10dp"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="10dp"
            app:lottie_rawRes="@raw/alarm_clock"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:onClick="alarmDismissButtonClicked"
            android:layout_gravity="center"
            android:id="@+id/alarmDismissButton"
            android:background="@drawable/rounded_view"
            android:text="Dismiss"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>